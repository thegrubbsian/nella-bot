# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ALLOWED_USER_IDS=123456789,987654321

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-5-20250929
DEFAULT_CHAT_MODEL=sonnet
DEFAULT_MEMORY_MODEL=haiku

# Google APIs — run `python scripts/google_auth.py --account <name>` to authenticate
GOOGLE_CREDENTIALS_PATH=credentials.json

# Comma-separated account names. Token files: token_<name>.json
GOOGLE_ACCOUNTS=work,personal
GOOGLE_DEFAULT_ACCOUNT=work

# Mem0 — get a free key at https://app.mem0.ai
# Memory features are disabled when this is empty.
MEM0_API_KEY=

# Database
DATABASE_PATH=data/nella.db

# Turso (hosted libSQL) — when set, overrides local DATABASE_PATH
# Create a database at https://turso.tech and grab the URL + token.
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Conversation
CONVERSATION_WINDOW_SIZE=50

# Memory extraction (automatic/unconscious memory)
MEMORY_EXTRACTION_ENABLED=true
MEMORY_EXTRACTION_MODEL=claude-haiku-4-5-20251001

# Notifications
DEFAULT_NOTIFICATION_CHANNEL=telegram

# Papertrail / SolarWinds Observability — log aggregation
# API Access token — enables the query_logs tool (read-only log search).
PAPERTRAIL_API_TOKEN=
PAPERTRAIL_API_URL=https://api.na-01.cloud.solarwinds.com
# Ingestion token — used by deploy script to configure rsyslog → SolarWinds forwarding.
# Create under API Tokens → Ingestion in the SolarWinds Observability UI.
PAPERTRAIL_INGESTION_TOKEN=

# Scratch space — temporary file storage for working files
# Default: data/scratch (relative to app root). No API key needed.
SCRATCH_DIR=data/scratch

# Brave Search — web research tools (web_search, read_webpage)
# Get a free API key at https://brave.com/search/api/ (2,000 queries/month free tier).
# Web tools are disabled when this is empty.
BRAVE_SEARCH_API_KEY=

# Scheduler
SCHEDULER_TIMEZONE=America/Chicago

# Webhooks — external service integrations (Zapier, Plaud, etc.)
# Server is disabled when WEBHOOK_SECRET is empty.
# VPS firewall must allow inbound on WEBHOOK_PORT (e.g. sudo ufw allow 8443/tcp)
WEBHOOK_PORT=8443
WEBHOOK_SECRET=

# ngrok — HTTPS tunnel for webhook endpoints (free static domain)
# Get an authtoken at https://dashboard.ngrok.com
# Claim a free static domain at https://dashboard.ngrok.com/domains
NGROK_AUTHTOKEN=
NGROK_DOMAIN=

# GitHub — read-only repo exploration + self-debugging
# Fine-grained PAT at https://github.com/settings/tokens?type=beta
# Needs "Contents" read access for code, "Issues" read for issues/PRs.
# GitHub tools are disabled when this is empty.
GITHUB_TOKEN=
# Nella's own source code repo (owner/repo format). Injected into the system
# prompt so she knows where to look when debugging herself.
NELLA_SOURCE_REPO=

# Plaud — meeting transcript processing
# Google Drive folder ID where Zapier drops Plaud transcripts.
# Find this in the Drive folder URL: https://drive.google.com/drive/folders/<THIS_ID>
PLAUD_DRIVE_FOLDER_ID=
# Which Google account to use for Plaud Drive access (used by webhook handler)
PLAUD_GOOGLE_ACCOUNT=personal

# Logging
LOG_LEVEL=INFO
